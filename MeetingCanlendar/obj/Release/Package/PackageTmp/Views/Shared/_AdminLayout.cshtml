<!DOCTYPE xhtml>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Admin/Content/css")
    @Scripts.Render("~/bundles/jquery") 
    <script type="text/javascript" src="@Url.Content("~/Scripts/moment.min.js")"></script>
</head>
<body>
    <div class="adm-catg">
        @Html.Partial("~/Views/Admin/_PartialMenu.cshtml")
    </div>
    <div class="adm-cnt">
        @RenderBody()
    </div>
    <div class="clear"></div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.adm-cnt').css('width', document.body.clientWidth - $('.adm-catg').outerWidth());
        });


        $(window).resize(function () {
            $('.adm-cnt').css('width', document.body.clientWidth - $('.adm-catg').outerWidth());
        });
    </script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/chzn-chosen.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/datepicker.zh-CN.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/admin-common.js")"></script>

</body>
</html>
